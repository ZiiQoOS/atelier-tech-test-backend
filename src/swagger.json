{
  "swaggerDefinition": {
    "swagger": "2.0",
    "info": {
      "description": "Player manager API",
      "version": "1.0.0",
      "title": "Player manager",
      "contact": {
        "email": "contact@playerapi.com"
      }
    },
    "host": "https://atelier-tech-test-backend.herokuapp.com",
    "basePath": "/",
    "tags": [{
      "name": "Players",
      "description": "Players manager"
    }],
    "schemes": [
      "http"
    ],
    "paths": {
      "/players": {
        "get": {
          "tags": [
            "Players"
          ],
          "summary": "Returns all players",
          "description": "Return list of all players",
          "produces": [
            "application/json"
          ],
          "parameters": [],
          "responses": {
            "200": {
              "description": "successful operation",
              "schema": {
                "$ref": "#/definitions/Player"
              }
            },
            "204": {
              "description": "No result found",
              "schema": {
                "type": "array"
              }
            }
          }
        }
      },
      "/players/{playerId}": {
        "get": {
          "tags": [
            "Players"
          ],
          "summary": "Find player by ID",
          "description": "Returns a single player",
          "operationId": "getPlayerById",
          "produces": [
            "application/json"
          ],
          "parameters": [{
            "name": "playerId",
            "in": "path",
            "description": "ID of player to return",
            "required": true,
            "type": "integer",
            "format": "int64"
          }],
          "responses": {
            "200": {
              "description": "successful operation",
              "schema": {
                "$ref": "#/definitions/Player"
              }
            },
            "404": {
              "description": "Player not found"
            }
          }
        }
      },
      "/statistics": {
        "get": {
          "tags": [
            "Statisctics"
          ],
          "summary": "Returns statistics",
          "description": "Returns statistics",
          "produces": [
            "application/json"
          ],
          "parameters": [],
          "responses": {
            "200": {
              "description": "successful operation",
              "schema": {
                "$ref": "#/definitions/Stats"
              }
            }
          }
        }
      }
    },
    "definitions": {
      "Player": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "firstName": {
            "type": "string"
          },
          "fullName": {
            "type": "string"
          },
          "birthDate": {
            "type": "string",
            "format": "date-time"
          },
          "picture": {
            "type": "string"
          },
          "rank": {
            "type": "integer",
            "format": "int64"
          },
          "points": {
            "type": "string"
          },
          "country": {
            "$ref": "#/definitions/Country"
          },
          "age": {
            "type": "integer",
            "format": "int64"
          },
          "height": {
            "type": "integer",
            "format": "int64"
          },
          "weight": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "Country": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "picture": {
            "type": "string"
          }
        }
      },
      "Stats": {
        "type": "object",
        "properties": {
          "topRatioCountry": {
            "$ref": "#/definitions/Country"
          },
          "meanPlayersBMI": {
            "type": "number"
          },
          "medianHeightPlayers": {
            "type": "number"
          }
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
